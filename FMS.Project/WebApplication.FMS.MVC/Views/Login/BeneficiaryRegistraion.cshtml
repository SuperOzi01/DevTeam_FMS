@model ClassLibrary.FMS.DataModels.BeneficiaryRegistraionModel
@{
    ViewData["Title"] = "BeneficiaryRegistraion";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/js/fontawesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />

    <title>Create Account</title>
</head>
<body>
    <div class="container pb-80">
        <div class="card">
            <div class="row w-100">

                <div class="col-lg-6 p-0">
                    <div class="CardRight">
                        <img class="logo" src="~/icon/maintra logo white png.png" />
                        <div class="box1">

                            <header>Welcome Back!</header>
                            <p>To keep connected with us please login with your personal info</p>

                            <a href="/Login/LoginPortal" class="btnSignupCard">SIGN IN</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 p-0">
                    <div class="cardLeft">
                        <form asp-action="BeneficiaryRegistraion" class="myform1 text-center">

                            <header>Create Account </header>

                            <div class="form-group">
                                <i class="far fa-user"></i>
                                <input asp-for="Username" placeholder="Username" class="input" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <i class="far fa-user"></i>
                                <input asp-for="FirstName" placeholder="First Name" class="input" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <i class="far fa-user"></i>
                                <input asp-for="LastName" placeholder="Last Name" class="input" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <i class="far fa-envelope"></i>
                                <input asp-for="Email" placeholder="Email" class="input" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <i class="fas fa-lock"></i>
                                <input asp-for="Password" placeholder="Password" class="input" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.BuildingID, (IEnumerable<SelectListItem>)ViewBag.BuildingList, "--Select--", new { id = "select", name = "cours", @class = "input" })
                                <span asp-validation-for="BuildingID" class="text-danger"></span>
                            </div>

                            <input  type="submit" class="btnSignInCard" data-bs-toggle="modal" data-bs-target="#myModal" value="SIGN UP" />
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>