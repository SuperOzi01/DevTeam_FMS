@model ClassLibrary.FMS.DataModels.BeneficiaryRegistraionModel
@{
    ViewData["Title"] = "BeneficiaryRegistraion";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/js/fontawesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />

    <title>Create Account</title>
</head>
<body>
    <div class="container">
        <div class="card1">
            <div class="row">

                <div class="col-md-4">
                    <div class="CardRight">
                        <div class="box">
                            <header>Welcome Back!</header>
                            <p>To keep connected with us please login with your personal info</p>
                            <input asp-action="Index" type="submit" class="btnSignupCard" value="SIGN IN" />
                        </div>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="cardLeft">
                        <form asp-action="BeneficiaryRegistraion" class="myform text-center">

                            <header>Crate Acount </header>

                            <div class="form-group">
                                <i class="far fa-user"></i>
                                <input asp-for="Username" placeholder="Username" class="input" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <i class="far fa-user"></i>
                                <input asp-for="FirstName" placeholder="First Name" class="input" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <i class="far fa-user"></i>
                                <input asp-for="LastName" placeholder="Last Name" class="input" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <i class="far fa-envelope"></i>
                                <input asp-for="Email" placeholder="Email" class="input" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <i class="fas fa-lock"></i>
                                <input asp-for="Password" placeholder="Password" class="input" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.BuildingID, (IEnumerable<SelectListItem>)ViewBag.BuildingList, "--Select--", new { id = "select", name = "cours", @class = "input" })
                                <span asp-validation-for="BuildingID" class="text-danger"></span>
                            </div>

                            <input type="submit" class="btnSignInCard" value="SIGN UP" />
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>