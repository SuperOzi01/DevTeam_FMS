@model ClassLibrary.FMS.DataModels.BeneficiaryRegistraionModel
@{
    ViewData["Title"] = "BeneficiaryRegistraion";
    Layout = "~/Views/Shared/outSystemLayout.cshtml";
}

<!doctype html>
<html lang="en">

<body class="BodyBeneficiaryRegistraion">
    <div class="container pb-10">
        <div class="card">
            <div class="row">

                <div class="col-lg-6">
                    <div class="CardRight">
                        <img class="logo" src="~/icon/maintra logo white png.png" />
                        <div class="text-center">

                            <header>Welcome Back!</header>
                            <p>To keep connected with us please login with your personal info</p>

                            <a href="/Login/LoginPortal" class="btnSignupCard">SIGN IN</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="cardLeft">
                        <form asp-action="BeneficiaryRegistraion" class="myform1 text-center">

                            <header>Create Account </header>
                            <div class="form-group">
                                <i class="far fa-user"></i>
                                <input asp-for="Username" placeholder="Username" class="input" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-group ">
                                <ul>
                                    <li class=" d-flex flex-nowrap">
                                        <div class="  firstname">
                                            <i class="far fa-user"></i>
                                            <input asp-for="FirstName" placeholder="First Name" class="  inputsiz" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="lastname">
                                            <i class="far fa-user"></i>
                                            <input asp-for="LastName" placeholder="Last Name" class="  inputsiz" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <div class="form-group">
                                <i class="far fa-envelope"></i>
                                <input asp-for="Email" placeholder="Email" class="input" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <i class="fas fa-lock"></i>
                                <input asp-for="Password" placeholder="Password" class="input" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.BuildingID, ViewBag.BuildingList as List<SelectListItem>, "Building No", new { @class = "input" })
                                <span asp-validation-for="BuildingID" class="text-danger"></span>
                            </div>
                            <div class="form-groupInput">
                                <label style="color:red;">@ViewBag.Message</label>
                            </div>
                            <button type="submit" class="btnSignInCard " data-toggle="modal" data-target="#loginModalReject" id="button" value="Submit">Submit</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>

</html>
