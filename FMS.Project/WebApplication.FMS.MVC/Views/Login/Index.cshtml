@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />

    <title>Create Account</title>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="row">

                <div class="col-md-6">
                    <div class="cardLeft">
                        <form class="myform text-center">
                            <header>Sign In </header>
                            <div class="form-group">
                                <input type="text" placeholder="Email" class="input" required />
                                <div class="invalid-feedback">Please fill out this field </div>
                            </div>


                            <div class="form-group">
                                <input type="text" placeholder="Password" class="input" required />
                                <div class="invalid-feedback">Please fill out this field </div>
                            </div>
                            <input asp-action="signin" type="submit" class="btnSignInCard" value="SIGN IN" />
                        </form>
                    </div>
                    </div>


                <div class="col-md-6">
                    <div class="CardRight">
                        <div class="box">
                            <header>Hello,Client!</header>
                            <p>Enter your personal Details and Start
                            journey with us </p>
                            <input asp-action="Index1" type="submit" class="btnSignupCard" value="SIGN UP" />
                        </div>
                    </div>
                </div>


                    </div>
                </div>
            </div>


</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

