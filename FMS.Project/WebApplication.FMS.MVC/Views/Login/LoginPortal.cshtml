@model ClassLibrary.FMS.DataModels.LoginModel
@{
    ViewData["Title"] = "LoginPortal";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/js/fontawesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />

    <title>Create Account</title>
</head>
<body>
    <div class="container">
        <div class="card1">
            <div class="row">

                <div class="col-md-8">
                    <div class="cardLeft">
                        <form asp-action="LoginPortal" class="myform text-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <header>Sign In </header>
                            <div class="form-group">
                                <i class="far fa-envelope"></i>
                                <input asp-for="Username" placeholder="Username" class="input" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <i class="fas fa-lock"></i>
                                <input asp-for="Password" placeholder="Password" class="input" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                @Html.HiddenFor(model => model.Role)
                            </div>
                            <input type="submit" class="btnSignInCard" value="SIGN IN" />
                        </form>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="CardRight">
                        <div class="box">
                            <header>Hello,Client!</header>
                            <p>
                                Enter your personal Details and Start
                                journey with us
                            </p>
                            <a href="/Login/Signup" class="btnSignupCard"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>

