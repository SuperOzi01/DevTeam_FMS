@using ClassLibrary.FMS.DataModels.Models
@model MaintenanceManagerModel
@{
    ViewData["Title"] = "Login BackOffice";
}


<!-- Toggle button -->
<button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4 ToggleMedia "><i class="fa fa-bars mr-2"></i><small class="text-uppercase font-weight-bold text-toggel">Maintanance Requests</small></button>

<!-- Demo content -->
<!--New Request-->
@{
    if(ViewBag.PopUp == true )
            {
                <h2>Succeed</h2>
            }
 }
<div class="content " style="margin-bottom: 30px;">
    <div class="row">
        <div class="col-md-12 main-datatable">
            <div class="card_body">
                <div class="row d-flex">
                    <h5 class="newtext">New Requests</h5>
                    <div class="col-sm-8 add_flex">
                        <div class="form-group searchInput">
                            <label for="email">Search:</label>
                            <input type="search" class=" form-control" id="MaintananceManagerNew2tablefilterbox" placeholder=" ">
                        </div>
                    </div>
                </div>
                <div class="overflow-x">
                    <table style="width:100%;" id="MaintananceManagerNew2table" class="table cust-datatable dataTable no-footer ">
                        <thead>
                            <tr>
                                <th style="min-width:50px;">
                                    Service Request No.
                                </th>
                                <th style="min-width:150px;">
                                    Building No.
                                </th>
                                <th style="min-width:150px;">
                                    Specialization Type
                                </th>
                                <th style="min-width:150px;">
                                    Request Issue Date
                                </th>
                                <th style="min-width:150px;">
                                    Request Information
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OpenRequests)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ServiceRequestID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BuildingID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Specialization_Type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RequestIssueDate)
                                    </td>
                                    <td>
                                        @Html.ActionLink("", "RequestsInfo", "BackOffice", new { RequestNo = item.ServiceRequestID, ServiceType = item.Specialization_Type }, new { @class = "fa fa-edit" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<!--End New Request-->
